build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs:    lib
  exposed-modules:   Language.EventBased.Lexer,
                     Language.EventBased.Parser
  build-depends:     base >= 4.6,
                     array,
                     pretty-show,
                     time >= 1.5
  build-tools:       alex, 
                     happy

executable SensorNet-Lexer
  main-is:           Lexer.hs   
  hs-source-dirs:    src
  build-depends:     base >= 4.6,
                     array,
                     time >= 1.5,
                     pretty-show,
                     sensornet

executable SensorNet-Parser
  main-is:           Parser.hs 
  hs-source-dirs:    src
  build-depends:     base >= 4.6,
                     array,
                     time >= 1.5,
                     pretty-show,
                     sensornet

test-suite test-suite
   build-depends:    base, 
                     sensornet,
                     QuickCheck,
                     time,
                     hspec >= 1.8
   hs-source-dirs:   tests
   main-is:          Spec.hs 
   type:             exitcode-stdio-1.0
